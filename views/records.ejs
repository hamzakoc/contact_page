                  <br><br>
                    <h4>Records stored in MongoDB database</h4>     
                    <br><br>

                    <div class="row row-cols-2 row-cols-md-3 g-3">
                        <%postsAll.forEach(element=> { %>
                            <div class="col">
                                <div class="card border-success mb-3" >
                                    <div class="card-body">
                                     <ul class="list-group list-group-flush">
                                        <li class="list-group-item"><strong>From :</strong> <i><%=element.fromEmail%> </i></li>
                                        <li class="list-group-item"><strong>To:</strong>  <i><%=element.toEmail%> </i></li>
                                        <li class="list-group-item"><strong>Title:</strong>  <i><%=element.title%> </i></li>
                                        <li class="list-group-item"><strong>Message:</strong>  <%=element.messageInc%></i></li>
                                    </ul>
                                        <a href="/records/<%=element._id%>" class="deleteButton btn" role="button">Delete </a>
                                    </div>
                                </div>
                            </div>
                            <% });%>
                    </div>

               </div>
            
            </div>

        </div>
