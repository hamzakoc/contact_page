    <div class="container contact">
        <div class="row">
            <div class="col-md-3 ">
                <div class="contact-info ">
                    <i class="fa fa-envelope"></i>
                    <h2>Get in touch with us</h2>
                    <h5>We'd love to hear from you.</h5>
                </div>
            </div>

            <div class="col-md-9">

                <form  method="POST" id="contactForm" name="contactForm">

                    <div class="contact-form">


                        <div class="form-group">
                            <label class="control-label col-sm-2" for="fromEmail">From:</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="fromEmail" placeholder="Enter your email "
                                    name="fromEmail" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2" for="toEmail">To:</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="toEmail"
                                    placeholder="Enter an email address to send" name="toEmail" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2" for="title">Title:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="title" placeholder="Enter title"
                                    name="title" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2" for="comment">Message:</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" rows="5" id="messageInc" placeholder="Your message"
                                    name="messageInc" itemid="" required></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn " onclick="">Submit</button>

                            </div>

                        </div>

                        
                      <h5 id="sucMessage"></h5>
                        
                       
                    </div>

                </form>

            </div>
        </div>
    </div>
